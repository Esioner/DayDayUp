<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#000000"
              android:orientation="vertical">

    <me.xiaopan.sketch.SketchImageView
        android:id="@+id/iv_show_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@id/iv_show_image"
        android:layout_height="20dp"
        android:baselineAligned="false"
        android:paddingBottom="5dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/btn_return_show_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/selector_show_image_back_button"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left">

            <ImageButton
                android:id="@+id/btn_save_show_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/selector_btn_save"/>
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>